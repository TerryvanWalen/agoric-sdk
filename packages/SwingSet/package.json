{
  "name": "@agoric/swingset-vat",
  "version": "0.3.0",
  "description": "Vat/Container Launcher",
  "main": "src/main.js",
  "module": "src/index.js",
  "engines": {
    "node": ">=11.0"
  },
  "bin": {
    "vat": "bin/vat"
  },
  "scripts": {
    "build": "npm run-script build-kernel",
    "build-kernel": "node -r esm scripts/build-kernel.js",
    "pack": "npm run-script build-kernel && npm pack",
    "publish": "npm run-script pack && npm publish --access public",
    "test": "npm run-script build-kernel && tap --no-coverage test/test-node-version.js && tap --no-coverage --reporter specy --timeout 60 'test/**/test*.js'",
    "test-nosort": "npm run-script build-kernel && tape -r esm test/test-node-version.js && tape -r esm 'test/**/test*.js'",
    "pretty-fix": "prettier --write '**/*.js'",
    "pretty-check": "prettier --check '**/*.js'",
    "lint-fix": "eslint --fix '**/*.js'",
    "lint-check": "eslint '**/*.js'"
  },
  "devDependencies": {
    "esm": "^3.2.5",
    "tap": "^14.10.5",
    "tape": "^4.11.0",
    "tape-promise": "^4.0.0"
  },
  "dependencies": {
    "@agoric/assert": "^0.0.1",
    "@agoric/bundle-source": "^1.0.2",
    "@agoric/default-evaluate-options": "^0.3.0",
    "@agoric/evaluate": "^2.2.0",
    "@agoric/eventual-send": "^0.5.0",
    "@agoric/harden": "^0.0.4",
    "@agoric/marshal": "^0.1.1",
    "@agoric/nat": "^2.0.1",
    "@agoric/swing-store-simple": "^0.1.0",
    "@agoric/tame-metering": "^1.0.0",
    "@agoric/transform-metering": "^1.1.0",
    "@babel/core": "^7.5.0",
    "rollup": "^1.23.1",
    "rollup-plugin-node-resolve": "^5.2.0",
    "semver": "^6.3.0",
    "ses": "^0.7.0",
    "yargs": "^14.2.0"
  },
  "files": [
    "bin/vat",
    "src/**/*.js",
    "src/bundles/kernel"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Agoric/SwingSet.git"
  },
  "author": "Agoric",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/Agoric/SwingSet/issues"
  },
  "homepage": "https://github.com/Agoric/SwingSet#readme",
  "directories": {
    "example": "examples"
  }
}
